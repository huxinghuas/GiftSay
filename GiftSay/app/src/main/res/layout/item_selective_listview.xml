<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/selective_one_line_ly"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:gravity="center|left"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/selective_lv_first_line_left_tv"
                android:background="#b9475e"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:textSize="14sp"
                android:layout_gravity="center"
                android:text="美物" />

            <TextView
                android:id="@+id/seletive_lv_first_line_left_second_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="礼物帮兄弟"
                android:textColor="#202020"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:gravity="center|right"
            android:orientation="horizontal"
           >

            <TextView
                android:id="@+id/selective_lv_first_line_right_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:textSize="12sp"
                android:text="礼帮助" />

            <ImageView
                android:id="@+id/selective_lv_first_line_right_img"
                android:layout_marginRight="10dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/select_selective_shape"
                android:src="@mipmap/ic_launcherss" />
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="12dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:gravity="center"
        >



        <ImageView
            android:id="@+id/selective_lv_center_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@mipmap/ic_huoying" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:gravity="center|left"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/selective_lv_three_line_left_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:ellipsize="end"
                    android:maxEms="10"
                    android:maxLines="1"
                    android:minLines="1"
                    android:textColor="#050505"
                    android:text="异地保鲜恋"
                    android:textSize="15sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:gravity="center|right"
                android:orientation="horizontal"
               >

                <ImageView
                    android:id="@+id/selective_lv_three_righ_timg"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/select_feed_bg"/>

                <TextView
                    android:id="@+id/selectiver_lv_three_right_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:text="哈哈"

                    />



            </LinearLayout>


        </LinearLayout>
    </LinearLayout>
</LinearLayout>